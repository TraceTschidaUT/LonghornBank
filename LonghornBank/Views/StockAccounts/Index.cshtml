@model IEnumerable<LonghornBank.Models.StockAccount>

@{
    ViewBag.Title = "Index";
}

<h2>@Html.Raw(Model.FirstOrDefault().Name)</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Buy Stocks", "StockChoices", "StockTrades")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CashBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradingFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gains)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balanced)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CashBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TradingFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gains)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balanced)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StockAccountID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StockAccountID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StockAccountID })
        </td>
    </tr>
}

</table>


@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2 class="text-center">Welcome to Longhorn Bank</h2>

<br/>
<br/>
<br/>

<style>
    .carousel-indicators li{
        background-color:dodgerblue;
    }

    .carousel-indicators .active{
        background-color: gray
    }

</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/checking.png" alt="checking">
            <div class="carousel-caption">
                <h3 style="color: aquamarine">Checking</h3>
                <h4 style="color: aqua">Hello Checking</h4>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/savings.png" alt="savings">
            <div class="carousel-caption">
                <h3 style="color: aquamarine">Savings</h3>
                <h4 style="color: aqua">Thank you, Savings</h4>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/savings2.png" alt="savings2">
            <div class="carousel-caption">
                <h3 style="color: aquamarine">IRA</h3>
                <h4 style="color: aqua">You'll love our IRA!</h4>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/checking2.png" alt="checking2">
            <div class="carousel-caption">
                <h3 style="color: aquamarine">Stock Portfolio</h3>
                <h4 style="color: aqua">Raise Your Rate Stock</h4>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@using LonghornBank.Models;
@model IEnumerable<LonghornBank.Models.Checking>

@{
    ViewBag.Title = "Index";
    Customer CustomerAccount = ViewBag.CustomerAccount;
}

<h2>Checking Account Home</h2>
<h3>@Html.DisplayFor(customerAccount => CustomerAccount.FName)'s Checking Accounts</h3>
<p>
    @Html.ActionLink("New Transaction", "Create", "BankingTransactions") | 
    @Html.ActionLink("Transactions Page", "Index", "BankingTransactions") | 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PendingBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PendingBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Checkings", new { id = item.CheckingID }, null) |
            @Html.ActionLink("Details", "Details", "Checkings", new { id = item.CheckingID }, null) |
            @Html.ActionLink("Delete", "Delete", "Checkings", new { id = item.CheckingID }, null)
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to Accounts Portal", "Portal", "Home", new { id = CustomerAccount.CustomerID }, null)

@using (Html.BeginForm("SellStocks", "StockTrades", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.StockMarketID)
    @Html.HiddenFor(model => model.StockAccountID)
    @Html.HiddenFor(model => model.TradeID)
    @Html.HiddenFor(model => model.QuantitySold)
    @Html.HiddenFor(model => model.SaleDate)
    @Html.HiddenFor(model => model.Profit)

    <div class="form-actions no-color">
        <input type="submit" value="Sell" class="btn btn-default" />
    </div>
}


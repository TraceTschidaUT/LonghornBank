@{
    ViewBag.Title = "SellStocks";
}

<h2>Sell Stock Confirmation</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StockName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantitySold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SharesRemaining)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profit)
        </th>
        <th></th>
    </tr>
    <tr>
        <th>
            @Html.DisplayFor(model => model.StockName)
        </th>
        <th>
            @Html.DisplayFor(model => model.QuantitySold)
        </th>
        <th>
            @Html.DisplayFor(model => model.SharesRemaining)
        </th>
